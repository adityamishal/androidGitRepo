<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.11" />

        <TextView
            android:id="@+id/candidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/candidateText"
            android:layout_toRightOf="@+id/candidateText"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/candidateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:paddingLeft="5dp"
            android:text="Candidate  :"
            android:textStyle="bold"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/candidate"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/statusText"
            android:layout_toRightOf="@+id/statusText"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/candidate"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Status         :"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/roundText"
            android:layout_toRightOf="@+id/roundText"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/roundText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statusText"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Round         :"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/round"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/dateText"
            android:layout_toRightOf="@+id/dateText"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roundText"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Date            :"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/interviewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/interviewerText"
            android:layout_toRightOf="@+id/interviewerText"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/interviewerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateText"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Interviewer:"
            android:textColor="#333"/>


        <TextView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/interviewer"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/imageText"
            android:layout_toRightOf="@+id/imageText"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/imageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/interviewerText"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Image URL :"
            android:textColor="#333"/>


    </RelativeLayout>

</LinearLayout>
